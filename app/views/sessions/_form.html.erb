<div class='window'>
    <div class='overlay'></div>
    <div class='content'>
      <div class='welcome'>Sign In</div>
      <div class='subtitle'>Log in now and start to create your tour records.</div>
      <div class='input-fields'>
      	<%= form_for(:session, url: login_path) do |f| %>
      		<%= f.text_field :email, type: 'email',placeholder:"E-mail",class:"input-line full-width"%>
      		<%= f.text_field :password, type: 'password',placeholder:"Password",class:"input-line full-width"%>
        	<div><%= f.submit "Login",:class => "ghost-round full-width" %></div>
        <%end%>	
      </div>
      <div class='spacing'>or continue with <span><%= link_to "Facebook", "/auth/facebook", :class => 'highlight'%></span></div>
      <div class='spacing'><span><%= link_to "All User List For Testing", list_path%></span></div>
	  </div>
</div>

