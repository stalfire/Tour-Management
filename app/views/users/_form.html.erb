<div class='window'>
    <div class='overlay'></div>
    <div class='content'>
      <div class='welcome'>Sign Up</div>
      <div class='subtitle'>Create an account and you be able to share your recipe.</div>
      <div class='input-fields'>
      	<%= form_for @user do |form| %>
      		<%= form.text_field :name, type: 'name',placeholder:"Name",class:"input-line full-width"%>
      		<%= form.text_field :email, type: 'email',placeholder:"E-mail",class:"input-line full-width"%>
      		<%= form.text_field :password, type: 'password',placeholder:"Password",class:"input-line full-width"%>
        	<div><%= form.submit "Create Account",:class => "ghost-round full-width" %></div>
        <%end%>	
      </div>
      <div class='spacing'>or continue with <span><%= link_to "Facebook", "/auth/facebook", :class => 'highlight'%></span></div>
	</div>
</div>

